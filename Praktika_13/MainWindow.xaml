<Window x:Class="Praktika_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="4" Margin="0,0,0,29" Grid.RowSpan="2">
            <MenuItem />
            <MenuItem Header="File"/>
            <MenuItem Header="Notifications"/>
            <MenuItem Header="Status"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Customer"/>
        </Menu>
        <TextBlock Text="Customer Search"
           Grid.Column="1"
           Grid.RowSpan="4"
           Grid.ColumnSpan="3"  
           FontSize="30" Margin="0,24,0,29"/>
        <TextBlock Text="Edit Customer"
           Grid.Column="4"
           Grid.RowSpan="4"
           Grid.ColumnSpan="3"
           FontSize="30" Margin="0,24,0,29"/>
        <Button Content="Save Data" Grid.Row="3" Grid.Column="8" Margin="1,1,1,1"/>
        <Button Content="Close" Margin="1,1,1,1" Grid.Column="9" Grid.Row="3"/>
        <TextBlock Text="First Name:" Grid.Row="4" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBlock Text="Last Name:" Grid.Row="5" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBlock Text="Company Name:" Grid.Row="6" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBlock Text="Division:" Grid.Row="7" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBlock Text="Phone Numbers" Grid.Row="8" Grid.Column="1" Margin="0,29,0,0" Grid.RowSpan="2"/>
        <TextBlock Text="Phone:" Grid.Row="10" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBlock Text="Fax:" Grid.Row="11" Grid.Column="1" Margin="3,3,8,3"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="7" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="9" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="10" Margin="2,2,2,2"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="11" Margin="2,2,2,2"/>
    </Grid>
</Window>
