<Window x:Class="Praktika_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="DimGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43.404"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10">
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Button Width="50" BorderThickness="0" Background="DimGray" Foreground="LightGray">File</Button>
                <Button Width="100" BorderThickness="0" Background="DimGray" Foreground="LightGray">Notifications</Button>
                <Button Width="50" BorderThickness="0" Background="DimGray" Foreground="LightGray">Status</Button>
                <Button Width="45" BorderThickness="0" Background="DimGray" Foreground="LightGray">View</Button>
                <Button Width="60" BorderThickness="0" Background="DimGray" Foreground="LightGray">Customer</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="10" Margin="0,9,0,1">
            <Button Width="130" Height="40" FontSize="30" BorderThickness="0" Background="DimGray" Foreground="LightGray">Customer</Button>
            <Button Width="250" Height="40" FontSize="30" BorderThickness="0" Background="DimGray" Foreground="LightGray">
                <TextBlock Text="Edit customer">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="White" Opacity="1" BlurRadius="8">

                        </DropShadowEffect>
                    </TextBlock.Effect>
                </TextBlock>
            </Button>
        </StackPanel>
        <StackPanel  Background="Gray" Orientation="Horizontal" Grid.Column="0" Grid.RowSpan="2" Grid.Row="3" Grid.ColumnSpan="10" Margin="0,2,0,93">
            <StackPanel Orientation="Horizontal" Margin="650 0 0 0">
                <Button Width="60" Height="20" Margin="3" Background="DarkGray" Foreground="White">Save Data</Button>
                <Button Width="60" Height="20"  Background="DarkGray" Foreground="White" RenderTransformOrigin="0.54,-0.796">Close</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="6" Margin="0,16,0,43">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="First Name:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="90 5 5 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="92 5 5 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Company Name:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="50 5 5 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Division:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="110 5 5 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone Numbers" Margin="10 5 5 5" FontWeight="Heavy"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="120 5 5 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Fax:" FontSize="17" Foreground="White" Margin="10 0 0 0"/>
                <TextBox Width="200" Margin="143 5 5 5"></TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="0,16,0,43">
            <TextBlock Text="Birthday:" Foreground="White" FontSize="15" Width="60"/>
            <Calendar/>
        </StackPanel>
    </Grid>
</Window>
